	name = "joystick",
	hdrs = glob(["*.h"]),
	srcs = glob(["*.c"]),
	deps = [
			"//:SDL2internal",
			"//src/dynapi:dynapi",
			"//src/thread:thread",
			"//src/events:headers",
			"//src/video:video",
			"//src/video/khronos:khronos",
		] + select({
		"//:windows": [
			# "//src/joystick/dummy:dummy",
			"//src/joystick/windows:windows",
			"//src/joystick/hidapi:SDL_hidapi",
		],
		"//:macos": [
			"//src/joystick/darwin:joystick_darwin",
			"//src/joystick/hidapi:SDL_hidapi",
		],
		"//conditions:default": [
			# "//src/joystick/linux:linux",
		],
